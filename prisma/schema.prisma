generator client {
  provider = "prisma-client-js"
}

// npm run db:seed ile çalıştır: npx tsx prisma/seed.ts

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  emailVerified     DateTime?
  name              String?
  passwordHash      String?
  image             String?
  role              String    @default("user") // user | admin
  stripeCustomerId  String?   @unique @map("stripe_customer_id")
  planId            String?   @map("plan_id")
  plan              Plan?     @relation(fields: [planId], references: [id])
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  accounts          Account[]
  brands            Brand[]
  teamMembers       TeamMember[] @relation("member")
  invitedBy         TeamMember[] @relation("invitedBy")
  outputs           Output[]
  sessions          Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at       Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

enum ToolTier {
  free
  basic
  pro
  premium
}

model Category {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  order       Int      @default(0)
  tools       Tool[]
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

model Tool {
  id            String   @id @default(cuid())
  categoryId   String   @map("category_id")
  category     Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name         String
  slug         String
  description  String   @db.Text
  inputLabel    String?  @map("input_label")   // e.g. "Konu veya başlık girin"
  inputPlaceholder String? @map("input_placeholder")
  systemPrompt String   @db.Text @map("system_prompt") // Backend'de bizim girdiğimiz prompt
  tier         ToolTier @default(free)
  order        Int      @default(0)
  active       Boolean  @default(true)
  outputs      Output[]
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  @@unique([categoryId, slug])
}

model Plan {
  id                    String   @id @default(cuid())
  name                  String   // Starter, Growth, Scale
  slug                  String   @unique
  stripeProductId       String?  @map("stripe_product_id")
  stripePriceIdMonthly  String?  @map("stripe_price_id_monthly")
  stripePriceIdYearly   String?  @map("stripe_price_id_yearly")
  allowedToolTiers      String[] @map("allowed_tool_tiers") // ["free","basic"] etc
  teamMembersLimit      Int      @default(1) @map("team_members_limit")
  brandsLimit           Int      @default(1) @map("brands_limit")
  monthlyAmountCents    Int?     @map("monthly_amount_cents")
  yearlyAmountCents     Int?     @map("yearly_amount_cents")
  active                Boolean  @default(true)
  order                 Int      @default(0)
  users                 User[]
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")
}

model Brand {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?  @db.Text
  assets      Json?    // Marka verileri: tone, keywords, vb. (sonra detaylandırılacak)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  outputs    Output[]
  @@index([userId])
}

model TeamMember {
  id        String   @id @default(cuid())
  ownerId   String   @map("owner_id")
  owner     User     @relation("member", fields: [ownerId], references: [id], onDelete: Cascade)
  memberId  String   @map("member_id")
  member    User     @relation("invitedBy", fields: [memberId], references: [id], onDelete: Cascade)
  role      String   @default("member")
  createdAt DateTime @default(now()) @map("created_at")
  @@unique([ownerId, memberId])
}

model Output {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  toolId    String   @map("tool_id")
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  brandId   String?  @map("brand_id")
  brand     Brand?   @relation(fields: [brandId], references: [id], onDelete: SetNull)
  input     String   @db.Text
  result    String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  @@index([userId])
  @@index([toolId])
  @@index([createdAt])
}
